<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: helloworld.xml 51 2010-11-22 01:33:21Z chdemko $ -->
<extension type="component" version="1.6.0" method="upgrade">

	<name>JoomlaHaxe</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>September 2015</creationDate>
	<author>Allan Dowdeswell</author>
	<authorEmail>secrets@confidant.ca</authorEmail>
	<authorUrl>http://www.confidant.ca</authorUrl>
	<copyright>Copyright Allan Dowdeswell 2015</copyright>
	<license>GNU/GPL</license>
	<!--  The version string is recorded in the components table -->
	<version>0.0.1</version>
	<!-- The description is optional and defaults to the name -->
	<description>Experimental component generated by Haxe</description>

	<update> <!-- Runs on update; New in 1.6 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package 
		
		TODO: make a macro that generates this stuff and a zip file
		-->
	<files folder="site">
		<filename>index.html</filename>
		<filename>joomlahaxe.php</filename>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu>JoomlaHaxe</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>joomlahaxe.php</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
		</files>
	</administration>

</extension>

