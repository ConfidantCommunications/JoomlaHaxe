<extension type="component" version="1.6.0" method="upgrade">

	<name>JoomlaHaxe</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>September 2015</creationDate>
	<author>Allan Dowdeswell</author>
	<authorEmail>secrets@confidant.ca</authorEmail>
	<authorUrl>http://www.confidant.ca</authorUrl>
	<copyright>Copyright Allan Dowdeswell 2015</copyright>
	<license>GNU/GPL</license>
	<version>0.0.1</version>
	<description>Experimental component generated by Haxe</description>

	
	<install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<files folder="site">
		<filename>index.html</filename>
		<filename>joomlahaxe.php</filename>
		<folder>cache</folder>
		<folder>language</folder>
		<folder>lib</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<administration>
		<menu>JoomlaHaxe</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>joomlahaxe.php</filename>
			<filename>controller.php</filename>
			<folder>cache</folder>
			<folder>controllers</folder>
			<folder>sql</folder>
			<folder>language</folder>
			<folder>lib</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_joomlahaxe.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_joomlahaxe.sys.ini</language>
		</languages>
	</administration>
    <languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_joomlahaxe.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.com_joomlahaxe.sys.ini</language>
	</languages>
	
</extension>

